{
  "name": "ai-psx-gpt5",
  "version": "0.0.0",
  "private": true,
  "description": "Headless, accuracy-focused PlayStation 1 emulator in TypeScript with automated testing and Chrome host.",
  "license": "MIT",
  "author": "",
  "type": "module",
  "scripts": {
    "build": "npm run -ws build",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint packages apps tools tests --ext .ts,.tsx,.js,.cjs,.mjs --ignore-pattern **/dist/**",
    "lint:fix": "eslint packages apps tools tests --ext .ts,.tsx,.js,.cjs,.mjs --ignore-pattern **/dist/** --fix",
    "format": "prettier -w .",
    "e2e": "playwright test",
    "e2e:local": "node tools/run-e2e.mjs",
    "e2e:report": "playwright show-report",
    "prepare": "husky",
    "prepublishOnly": "npm run -ws build",
    "trace:bios": "node tools/trace-bios.mjs",
    "trace:pcsx-redux:bios": "TRACE_SEC=${TRACE_SEC:-3.0}; LOG=\"$(pwd)/pcsx-redux-bios.log\"; rm -f \"$LOG\"; /Applications/PCSX-Redux.app/Contents/MacOS/PCSX-Redux -run -interpreter -debugger -trace -stdout -bios \"$(pwd)/scph1001.bin\" > \"$LOG\" 2>/dev/null & pid=$!; sleep \"$TRACE_SEC\"; kill -INT $pid >/dev/null 2>&1 || true; sleep 0.2; kill -TERM $pid >/dev/null 2>&1 || true; wait $pid >/dev/null 2>&1 || true; wc -l \"$LOG\"",
    "gen:bios-tests": "node scripts/generate-bios-tests.mjs --log pcsx-redux-bios.log --out tests/generated --chunk 5000",
    "test:generated": "vitest -c vitest.generated.config.ts --run",
    "snapshot:sanity": "node tools/snapshot-sanity.mjs",
    "chunk:run": "node tools/chunk-with-snapshot-helper.mjs",
    "browser:serve": "node browser-test/server.js",
    "chunks:run:nosnap": "PSX_FOLLOW_SPEC_PC=1 npx vitest -c vitest.generated.config.ts --run",
    "trace:compare": "node tools/trace-compare/bin/trace-compare.js",
    "trace:smoke:3m": "PSX_TRACE_COMPAT=1 PSX_TRACE_TWEAK_EPC=1 node tools/run-div-emu-vs-pcsx.mjs --no-mem-trace --max 3000000",
    "trace:compare:stream": "PSX_TRACE_COMPAT=1 PSX_TRACE_TWEAK_EPC=1 node tools/compare-streaming.mjs --log pcsx-redux-bios.log"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "apps/**/*.{ts,tsx,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "tools/**/*.{ts,tsx,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "tests/**/*.{ts,tsx,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "canvas": "^3.2.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.2.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  }
}
