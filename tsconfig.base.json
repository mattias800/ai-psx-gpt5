{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@ai-psx/shared": ["packages/emulator-shared/src/index.ts"],
      "@ai-psx/cpu": ["packages/emulator-cpu/src/cpu.ts"],
      "@ai-psx/gpu": ["packages/emulator-gpu/src/index.ts"],
      "@ai-psx/spu": ["packages/emulator-spu/src/index.ts"],
      "@ai-psx/core": ["packages/emulator-core/src/psx.ts"]
    }
  },
  "include": []
}
